<%- include('partials/header') %>

<div class="content-page">
    <h1>Add Workout</h1>
    
    <% if (error) { %>
        <div class="error-message"><%= error %></div>
    <% } %>
    
    <form method="POST" action="/add-workout" class="workout-form">
        <div class="form-group">
            <label for="workout_type">Workout Type *</label>
            <select id="workout_type" name="workout_type" required>
                <option value="">Select a workout type</option>
                <% workoutTypes.forEach(type => { %>
                    <option value="<%= type.name %>"><%= type.name %></option>
                <% }) %>
            </select>
        </div>
        
        <div class="form-group">
            <label for="workout_date">Date *</label>
            <input type="date" id="workout_date" name="workout_date" required max="<%= new Date().toISOString().split('T')[0] %>">
        </div>
        
        <div class="form-group">
            <label for="duration">Duration (minutes) *</label>
            <input type="number" id="duration" name="duration" min="1" required>
        </div>
        
        <div class="form-group">
            <label for="distance">Distance (km)</label>
            <input type="number" id="distance" name="distance" min="0" step="0.1">
        </div>
        
        <div class="form-group">
            <label for="calories_burned">Calories Burned</label>
            <input type="number" id="calories_burned" name="calories_burned" min="0">
        </div>
        
        <div class="form-group">
            <label for="notes">Notes</label>
            <textarea id="notes" name="notes" rows="4" placeholder="How did the workout feel? Anything to report?"></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary">Add Workout</button>
        <a href="/dashboard" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<%- include('partials/footer') %>